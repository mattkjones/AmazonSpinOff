@{
    ViewData["Title"] = "Home Page";
}

<!--Pull in model to be able to access the Seed Data on Index page-->
@model IQueryable<Book>

<!--header, complete with Bootstrap :) -->
<header>
    <h1 class="text-center">Welcome to my Amazon Spin-Off Website</h1>
</header>

<!--Summary sentence, complete with Bootstrap :) -->
<p class="text-center">Below is a list of books that I recommend:</p>
<!--Create a table to iterate through the list of books generated in the seed-->
<table class="table table-bordered">
     <!--Table Headers-->
     <thead class="thead-light">
         <tr><th>Title</th><th>Author First</th><th>Author Last</th><th>Publisher</th><th>ISBN</th><th>Classification</th><th>Category</th><th>Price</th></tr>
     </thead>
     <tbody>
         <!--Gets every instance within the List-->
         @foreach (var x in Model)
         {
         <tr>
             <td>@x.Title</td>
             <td>@x.AuthorFirst</td>
             <td>@x.AuthorLast</td>
             <td>@x.Publisher</td>
             <td>@x.ISBN</td>
             <td>@x.Classification</td>
             <td>@x.Category</td>
             <td>@x.Price</td>
         </tr>
         }
     </tbody>
</table>

}