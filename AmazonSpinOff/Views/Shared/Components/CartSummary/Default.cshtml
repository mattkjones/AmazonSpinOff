@model Cart

<!--Dynamically decide if text should be displayed based on if items are in the cart-->
<div class="">
    @if (Model.LineItems.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.LineItems.Sum(x => x.Quantity) item(s)
            @Model.ComputeTotalSum().ToString("c")
        </small>
    }

    <!--Cart button-->
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Buy"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>
